---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pixel VPets">
  <main class="min-h-screen flex flex-col items-center justify-center bg-zinc-900 text-zinc-100 px-4 text-center">
    <h1 class="text-3xl font-semibold text-white mb-4">Work In Progress</h1>
    <p class="text-zinc-400 mb-6">// follow us for updates</p>

    <div class="flex gap-6">
      <a
        href="https://x.com/sargantanagames"
        target="_blank"
        rel="noopener noreferrer"
        class="relative group text-zinc-200 hover:text-white transition"
      >
        <span class="">X (Twitter)</span>
        <span
          class="absolute -bottom-0 left-0 w-0 h-0.5 bg-teal-400 transition-all duration-300 group-hover:w-full"
        ></span>
      </a>

      <a
        href="https://instagram.com/sargantanagames"
        target="_blank"
        rel="noopener noreferrer"
        class="relative group text-zinc-200 hover:text-white transition"
      >
        <span class="">Instagram</span>
        <span
          class="absolute -bottom-0 left-0 w-0 h-0.5 bg-pink-400 transition-all duration-300 group-hover:w-full"
        ></span>
      </a>
    </div>
  </main>
</Layout>
